<div class="container card mt-3 p-0">
  <div class="row g-0">
    <div class="col-8">
      <%= render 'carousel_images', post: @post %>
    </div>
    <div class="col-4">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center gap-3">
            <%= image_tag 'http://placehold.jp/40x40.png',
                          class: 'rounded-circle',
                          width: 40,
                          height: 40 %>
            <span class="font-weight-bold"><%= @post.user.username %></span>
          </div>
          <!-- Menu -->
          <% if current_user && current_user.owner?(@post) %>
            <div class="dropdown text-center">
              <a
                class="text-reset me-3 dropdown-toggle hidden-arrow w-100 d-block"
                href="#"
                id="postDropdownMenuLink"
                role="button"
                data-mdb-toggle="dropdown"
                aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </a>
              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="postDropdownMenuLink">
                <li>
                  <%= link_to '編集', edit_post_path(@post), class: 'dropdown-item' %>
                </li>
                <li>
                  <%= link_to '削除',
                              post_path(@post),
                              class: 'dropdown-item text-danger',
                              data: { turbo_method: :delete, turbo_confirm: '削除します' } %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="d-flex gap-3">
          <%= image_tag 'http://placehold.jp/40x40.png',
                        class: 'rounded-circle',
                        width: 40,
                        height: 40 %>
          <div>
            <span class="font-weight-bold"><%= @post.user.username %></span>
            <%= simple_format(@post.body) %>
            <p class="card-text">
              <small class="text-muted"><%= l @post.created_at, format: :long %></small>
            </p>
          </div>
        </div>

        <div class="d-flex gap-3">
          <%= image_tag 'http://placehold.jp/40x40.png',
                        class: 'rounded-circle',
                        width: 40,
                        height: 40 %>
          <div>
            <span class="font-weight-bold">ダミー太郎</span>
            <p>ダミーテキストダミーテキスト</p>
            <p class="card-text">
              <small class="text-muted">2022/04/04 00:16</small>
            </p>
          </div>
        </div>

        <div class="d-flex gap-3">
          <%= image_tag 'http://placehold.jp/40x40.png',
                        class: 'rounded-circle',
                        width: 40,
                        height: 40 %>
          <div>
            <span class="font-weight-bold">ダミー太郎</span>
            <p>ダミーテキストダミーテキスト</p>
            <p class="card-text">
              <small class="text-muted">2022/04/04 00:16</small>
            </p>
          </div>
        </div>

        <div class="card-footer">
          <form class="row gy-2 gx-3 align-items-center">
            <div class="col-9">
              <div class="form-outline">
                <input type="text" id="form11Example1" class="form-control" autocomplete="off">
                <label class="form-label" for="form11Example1">Label</label>
              </div>
            </div>
            <div class="col-3">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>